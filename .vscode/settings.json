{
  // Visuals
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "window.zoomLevel": 2,
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Gruvbox Material Dark",
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.lightContrast": "hard",
  "workbench.preferredLightColorTheme": "Gruvbox Material Light",
  "workbench.preferredDarkColorTheme": "Gruvbox Material Dark",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "boundary",
  "editor.guides.bracketPairs": "active",

  // Editor
  "window.nativeTabs": true, // macOS only and allows multiple instances of vs-code across tabs (window->new tab or cmd+shift+n)
  "editor.multiCursorModifier": "ctrlCmd", // allow ctrl or cmd to multi-cursor
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // For code quality, I use ESLint like so:
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],

  // I only use Prettier for manually formatting
  "prettier.enable": false, 
  "prettier.printWidth": 200,
  "prettier.semi": true,
  "prettier.singleQuote": true,

  // I only spell check markdown/plaintext files by default
  // I add more as needed in dev
  "cSpell.enabledLanguageIds": ["markdown", "plaintext"],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",

  // Personal file nesting config
  // updated 2023-02-01 09:11
  // https://github.com/antfu/vscode-file-nesting-config
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.asax": "$(capture).*.cs, $(capture).*.vb",
    "*.ascx": "$(capture).*.cs, $(capture).*.vb",
    "*.ashx": "$(capture).*.cs, $(capture).*.vb",
    "*.aspx": "$(capture).*.cs, $(capture).*.vb",
    "*.bloc.dart": "$(capture).event.dart, $(capture).state.dart",
    "*.c": "$(capture).h",
    "*.cc": "$(capture).hpp, $(capture).h, $(capture).hxx",
    "*.cjs": "$(capture).cjs.map, $(capture).*.cjs, $(capture)_*.cjs",
    "*.component.ts": "$(capture).component.html, $(capture).component.spec.ts, $(capture).component.css, $(capture).component.scss, $(capture).component.sass, $(capture).component.less",
    "*.cpp": "$(capture).hpp, $(capture).h, $(capture).hxx",
    "*.cs": "$(capture).*.cs",
    "*.cshtml": "$(capture).cshtml.cs",
    "*.csproj": "*.config, *proj.user, appsettings.*, bundleconfig.json",
    "*.css": "$(capture).css.map, $(capture).*.css",
