{
  // Editor
  "window.zoomLevel": 2,
  "window.nativeTabs": true, // macOS only and allows multiple instances of vs-code across tabs (window->new tab or cmd+shift+n)
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd", // allow ctrl or cmd to multi-cursor
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // Theme
  "workbench.colorTheme": "Gruvbox Material Dark",
  "gruvboxMaterial.darkContrast": "hard",

  // Code Formatting
  // For personal projects, I use Prettier
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 200,
  "prettier.semi": true,
  "prettier.singleQuote": true

  // For larger projects, I will get more granular and use ESLint like so:
  // "editor.codeActionsOnSave": {
  //   "source.fixAll": false,
  //   "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
  //   "source.organizeImports": false
  // },
}
